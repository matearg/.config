{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "transparent",
          "foreground": "yellow",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " \uf0e7 ",
          "type": "root"
        },
        {
          "background": "transparent",
          "foreground": "white",
          "style": "diamond",
          "template": " {{ .UserName }}@{{ .HostName }} ",
          "type": "session"
        },
        {
          "background": "lightBlue",
          "foreground": "black",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "style": "agnoster_short"
          },
          "style": "powerline",
          "template": " {{ path .Path .Location }} ",
          "type": "path"
        },
        {
          "background": "magenta",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}{{ end }}",
            "{{ if gt .Ahead 0 }}magenta{{ end }}",
            "{{ if gt .Behind 0 }}{{ end }}",
            "{{ if .UpstreamGone }}{{ end }}"
          ],
          "foreground": "black",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "azure_devops_icon": "\ufd03 ",
            "bitbucket_icon": "\uf171 ",
            "branch_gone_icon": "\uf68e ",
            "branch_icon": "\ue0a0 ",
            "branch_identical_icon": "\uf690 ",
            "commit_icon": "\uf417 ",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": false,
            "fetch_worktree_count": true,
            "git_icon": "\uf1d3",
            "github_icon": "\uf408",
            "gitlab_icon": "\uf296",
            "tag_icon": "\uf412 "
          },
          "style": "powerline",
          "template": " {{ .HEAD }}{{ if .Working.Changed }} {{.Working.String}}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} {{.Staging.String}}{{ end }}{{ if gt .StashCount 0 }} {{.StashCount}}{{ end }}{{ if gt .WorktreeCount 0 }}{{if .IsWorkTree}}{{ end }} {{if .IsWorkTree}}{{ end }}{{.WorktreeCount}}{{ end }} ",
          "type": "git"
        },
        {
          "background": "yellow",
          "foreground": "black",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "display_mode": "files",
            "fetch_virtual_env": true
          },
          "style": "powerline",
          "template": " \ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} ",
          "type": "python"
        },
        {
          "background": "green",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "fetch_version": true
          },
          "style": "powerline",
          "template": " \uf898 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
          "type": "node"
        },
        {
          "background": "red",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " \u2717 ",
          "type": "exit"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{if .Root}} \u26a1 {{end}}{{.UserName}} \u2794 üìÅ{{.Folder}}",
  "final_space": true,
  "version": 2
}
